# Environment Configuration
# Copie este arquivo para .env e configure com seus valores

# ===== DOCKER COMPOSE =====
# Usada como prefixo nos containers
COMPOSE_PROJECT_NAME=docker-mk3

# ===== DATABASE CREDENTIALS =====
# MariaDB
MYSQL_ROOT_PASSWORD=secure_root_password_change_me
MYSQL_DATABASE=homestead
MYSQL_USER=countryadmin
MYSQL_PASSWORD=secure_user_password_change_me

# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_postgres_password_change_me
POSTGRES_DB=localstack

# MongoDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=secure_mongo_password_change_me

# ===== RABBITMQ =====
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ===== DRONE CI =====
DRONE_RPC_SECRET=your_drone_rpc_secret_here_change_me
DRONE_GITHUB_CLIENT_ID=
DRONE_GITHUB_CLIENT_SECRET=
# DRONE_GITLAB_CLIENT_ID=
# DRONE_GITLAB_CLIENT_SECRET=
# DRONE_GITEA_CLIENT_ID=
# DRONE_GITEA_CLIENT_SECRET=

# ===== ELASTICSEARCH =====
ELASTIC_VERSION=8.10.0
ELASTIC_PASSWORD=changeme
xpack.security.enabled=false

# ===== UPTIME KUMA =====
# Porta alternativa para n√£o conflitar com HTTP
UPTIME_KUMA_PORT=8443
